<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.shuai.rulerview.RulerWheel
        android:id="@+id/ruler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:MaxBarSize="1dp"
        app:MidBarSize="1dp"
        app:MinBarSize="1dp"
        app:lineColorMax="@color/colorPrimary"
        app:lineColorMid="@color/colorPrimary"
        app:lineColorMin="@color/colorPrimary"
        app:line_divider="8dp"
        app:mask_bg="@drawable/ic_ruler_pointer"
        app:max_value="200"
        app:min_value="100"
        app:mode="SCALE"
        app:scaleWidth="1dp"
        app:showGradient="false"
        app:showScaleValue="true"
        app:text_Size="30"
        app:text_color="@color/colorPrimary" />
</LinearLayout>

